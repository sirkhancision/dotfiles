### Variables
# Logo key. Use Mod1 for Alt.
set $mod Mod4
set $term alacritty
set $calculator qalculate-gtk
set $file_manager nnn
set $launcher $HOME/.config/rofi/launchers/type-3/launcher.sh
set $logout $HOME/.config/rofi/applets/bin/powermenu.sh
set $locker betterlockscreen -l dim
set $import_gsettings $HOME/.config/i3/scripts/import-gsettings.sh

set $screenclip $HOME/.config/i3/scripts/screenclip.py
set $screenshot $HOME/.config/i3/scripts/screenshot.py
set $windowshot $HOME/.config/i3/scripts/windowshot.py
set $scroll_workspace $HOME/.config/i3/scripts/workspace_scroll.py
set $add_workspace $HOME/.config/i3/scripts/workspace_add.py
set $switch_workspace $HOME/.config/i3/scripts/workspace_switch.py
set $volume_change $HOME/.config/i3/scripts/volume_change.py

font pango:monospace 12

### Window borders
default_border pixel 3
default_floating_border pixel 3
hide_edge_borders smart
smart_gaps on
gaps inner 10

### Colors
set $cl_high #E97E8A
set $cl_indi #65ABA3
set $cl_back #704144
set $cl_fore #CE8B9F
set $cl_urge #EB842B
#                        border     bg      text     indi  childborder
client.focused          $cl_high $cl_high $cl_fore $cl_indi $cl_high
client.focused_inactive $cl_back $cl_back $cl_fore $cl_back $cl_back
client.unfocused        $cl_back $cl_back $cl_fore $cl_back $cl_back
client.urgent           $cl_urge $cl_urge $cl_fore $cl_urge $cl_urge

### Autostart
# Workaround for GTK theme
exec_always --no-startup-id $import_gsettings
# Starts polybar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh &
# Starts autotiling
exec_always --no-startup-id autotiling
# Starts dunst
exec --no-startup-id dunst

### Key bindings
# Basics:
    # Start a terminal
    bindsym $mod+Return exec $term
    # Open the default file manager
    bindsym $mod+e exec "$term -e zsh -ic 'source $HOME/.zshrc && n'"
    # Start your launcher
    bindsym Menu exec $launcher
    # Lock the screen
    bindsym $mod+l exec $locker
    # Kill focused window
    bindsym Mod1+F4 kill
    # Reload the configuration file
    bindsym $mod+Shift+c reload
    # Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
    bindsym $mod+Shift+r restart
    # Take a screenshot
    bindsym Print exec --no-startup-id $screenshot
    # Take a screenshot of a window
    bindsym $mod+Print exec --no-startup-id $windowshot
    # Take an interactive screenshot
    bindsym --release $mod+Shift+Print exec $screenclip
    # Open logout manager
    bindsym Ctrl+Mod1+Delete exec $logout
    # Add a new workspace to the first non-empty position
    bindsym $mod+Insert exec --no-startup-id $add_workspace
    # Go to the next non-empty workspace
    bindsym Mod1+Tab exec --no-startup-id $scroll_workspace

# Moving around:
    # Move your focus around
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Change the window's location
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

# Workspaces:
        # Switch to workspace
        bindsym $mod+1 exec --no-startup-id "$switch_workspace 1"
        bindsym $mod+2 exec --no-startup-id "$switch_workspace 2"
        bindsym $mod+3 exec --no-startup-id "$switch_workspace 3"
        bindsym $mod+4 exec --no-startup-id "$switch_workspace 4"
        bindsym $mod+5 exec --no-startup-id "$switch_workspace 5"
        bindsym $mod+6 exec --no-startup-id "$switch_workspace 6"
        bindsym $mod+7 exec --no-startup-id "$switch_workspace 7"
        bindsym $mod+8 exec --no-startup-id "$switch_workspace 8"
        bindsym $mod+9 exec --no-startup-id "$switch_workspace 9"
        bindsym $mod+0 exec --no-startup-id "$switch_workspace 10"
        # Move focused container to workspace
        bindsym $mod+Shift+1 move container to workspace number 1
        bindsym $mod+Shift+2 move container to workspace number 2
        bindsym $mod+Shift+3 move container to workspace number 3
        bindsym $mod+Shift+4 move container to workspace number 4
        bindsym $mod+Shift+5 move container to workspace number 5
        bindsym $mod+Shift+6 move container to workspace number 6
        bindsym $mod+Shift+7 move container to workspace number 7
        bindsym $mod+Shift+8 move container to workspace number 8
        bindsym $mod+Shift+9 move container to workspace number 9
        bindsym $mod+Shift+0 move container to workspace number 10

# Layout stuff:
    bindsym $mod+h split h
    bindsym $mod+v split v
    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+Shift+e layout toggle split
    # Make the current focus fullscreen
    bindsym $mod+f fullscreen toggle
    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle
    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle
    # Move focus to the parent container
    bindsym $mod+a focus parent
    # Use Mouse+$mod to drag floating windows to their wanted position
    floating_modifier $mod

# Scratchpad:
    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad
    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show

# Resizing containers:
mode "resize" {
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px
    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Multimedia
bindsym XF86AudioRaiseVolume exec --no-startup-id $volume_change increase
bindsym XF86AudioLowerVolume exec --no-startup-id $volume_change decrease
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 25
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 25

# Compose mail
bindsym XF86Mail exec thunderbird -compose
# Open calculator
bindsym XF86Calculator exec $calculator
# Notifications
bindsym Ctrl+Mod1+x exec --no-startup-id dunstctl close
bindsym Ctrl+Shift+x exec --no-startup-id dunstctl close-all

# Misc. settings
# Configure Firefox's Picture-in-Picture mode
for_window [class="Firefox" title="Picture-in-Picture"] \
    floating enable, sticky enable, resize set 854 480
for_window [class="update_module"] \
    floating enable, move position 10 43, resize set 36 ppt 64 ppt
for_window [title="(?:Open | Save) (?:File|Folder|As)"] floating enable
for_window [class="Firefox" title="Firefox - Indicador de compartilhamento"] \
    floating enable, move position 900 0
for_window [class="Steam" title="^Steam  Novidades"] floating enable
for_window [class="Steam" title="Lista de amigos"] floating enable
for_window [class="(celluloid|File-roller|vlc|Pavucontrol)"] floating enable
for_window [title="nomacs"] floating enable
# steam games
for_window [class="^steam_app_\d+$"] floating enable
# wine programs
for_window [class=".+\.exe$"] floating enable
for_window [class="thunar" title="Progresso da operação de arquivo"] floating enable
for_window [class="com\.github\.hluk\.copyq"] floating enable
for_window [class="Yad" title="yad-calendar"] floating enable
